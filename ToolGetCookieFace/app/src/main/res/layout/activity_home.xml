<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:paddingBottom="20dp"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_hoatdong"
                    android:background="@drawable/background"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_height="75dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Activity"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn2"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_quangcao"
                    android:background="@drawable/background"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_height="75dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Advertisement"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/btn3"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_cuochen"
                    android:background="@drawable/background"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_height="75dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Appointment"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn4"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_sukien"
                    android:background="@drawable/background"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_height="75dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Event"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn5"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_vieclam"
                    android:background="@drawable/background"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_height="75dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Job"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/btn6"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_thongtin"
                    android:background="@drawable/background"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_height="75dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Information"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/btn7"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_caidat"
                    android:background="@drawable/background"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_height="75dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Setting"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn8"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_ykiendonggop"
                    android:background="@drawable/background"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_height="75dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Comments"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btn9"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_hotro"
                    android:background="@drawable/background"
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:layout_height="75dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Support"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>